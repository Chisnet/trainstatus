#!/bin/bash
# File  : tubestatus.sh
# Author: Matthieu Petiteau <mpetiteau.pro@gmail.com>
# Date  : 25.09.2019

# This script fetch the tube line statuses from the TFL API
# https://api.tfl.gov.uk and returns the results in terminal.

if ! command -v jq &>/dev/null; then
  echo "You need to install jq to run this script."
  echo "https://github.com/stedolan/jq"
  echo
  case "$OSTYPE" in
  solaris*)
    echo "pkgutil -i jq"
    ;;
  darwin*)
    echo "brew install jq"
    ;;
  linux*)
    echo "Debian/Ubuntu  sudo apt-get install jq"
    echo "Fedora         sudo dnf install jq"
    echo "openSUSE       sudo zipper install jq"
    echo "Arch           sudo pacman -Sy jq"
    ;;
  bsd*)
    echo "pkg install jq"
    ;;
  msys*)
    echo "chocolatey install jq"
    ;;
  *)
    echo "https://stedolan.github.io/jq/download/"
    ;;
  esac
  exit 0
fi

RED='\033[01;31m'
GREEN='\033[01;32m'
YELLOW='\033[01;33m'
NONE='\033[0m'

curl -s "https://api.tfl.gov.uk/line/mode/tube,overground,dlr,tflrail/status" |
  jq -j '.[] |
  "●¬" + (.name) + "¬",
  (.lineStatuses[0] | (.statusSeverity), "¬" +
  (.statusSeverityDescription) + "¬",
  (.reason // "NA") + "¬\n")' |
    awk -F "¬" -v r=$RED -v y=$YELLOW -v g=$GREEN -v n=$NONE '{
      if ( $5 == "NA" ) reason="";
      else reason=$5;
      if ( $3 == 10 ) color=g;
      else if ( $3 >= 8 ) color=y;
      else color=r;
      print color$1,n$2,"¬",$4,"¬",reason;
    }' | column -t -s "¬"
